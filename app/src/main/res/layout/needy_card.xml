<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="3dp"
            android:background="#fff">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    app:civ_border_width="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="#ff000000"
                    android:id="@+id/pic_image_view_id"
                    android:clickable="true"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/progress_bar_id"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="2dp">

                <com.shivam.sosblood.widgets.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shivam Sethi"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:id="@+id/name_textview_id"
                    android:layout_marginTop="7dp"/>

                <com.shivam.sosblood.widgets.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jhansi, UP"
                    android:textColor="#444"
                    android:textSize="15sp"
                    android:id="@+id/city_textview_id"
                    android:layout_below="@+id/name_textview_id"/>

                <com.shivam.sosblood.widgets.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB+"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="#cc2333"
                    android:textSize="17sp"
                    android:id="@+id/blood_group_textview_id"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ccc"/>

    </LinearLayout>

</android.support.v7.widget.CardView>