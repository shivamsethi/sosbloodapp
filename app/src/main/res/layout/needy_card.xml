<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="3dp"
        android:background="#e8e8e8">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@drawable/insta"
                app:civ_border_width="3dp"
                app:civ_border_color="#ff000000"
                android:id="@+id/pic_image_view_id"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/progress_bar_id"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shivam Sethi"
                android:textColor="#000"
                android:textSize="19sp"
                android:id="@+id/name_textview_id"
                android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jhansi, UP"
                android:textColor="#444"
                android:textSize="15sp"
                android:id="@+id/city_textview_id"
                android:layout_below="@+id/name_textview_id"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB+"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="#cc2333"
                android:textSize="17sp"
                android:id="@+id/blood_group_textview_id"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>