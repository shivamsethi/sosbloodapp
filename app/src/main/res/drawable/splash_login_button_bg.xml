<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <corners
                android:radius="7dp" />

            <gradient
                android:startColor="@color/theme_red"
                android:endColor="@color/theme_red" />

        </shape>

    </item>

    <item
        android:state_pressed="true" >

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <corners
                android:radius="7dp" />

            <gradient
                android:startColor="@color/light_red"
                android:endColor="@color/light_red" />

        </shape>

    </item>

</selector>