<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <layer-list>

            <item
                android:right="5dp"
                android:top="5dp" >

                <shape>

                    <corners
                        android:radius="4dp" />

                    <solid
                        android:color="#737477" />

                </shape>

            </item>

            <item
                android:bottom="3dp"
                android:left="3dp">

                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" >

                    <corners
                        android:radius="4dp" />

                    <gradient
                        android:startColor="@color/theme_red"
                        android:endColor="@color/theme_red" />

                </shape>

            </item>

        </layer-list>

    </item>

    <item
        android:state_pressed="true" >

        <layer-list>

            <item
                android:right="5dp"
                android:top="5dp" >

                <shape>

                    <corners
                        android:radius="4dp" />

                    <solid
                        android:color="#555555" />

                </shape>

            </item>

            <item
                android:bottom="3dp"
                android:left="3dp">

                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" >

                    <corners
                        android:radius="4dp" />

                    <gradient
                        android:startColor="@color/theme_red_selected"
                        android:endColor="@color/theme_red_selected" />

                </shape>

            </item>

        </layer-list>

    </item>

</selector>